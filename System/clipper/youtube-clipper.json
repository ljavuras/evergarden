		"/(https?:\\/\\/)?www.youtube.com\\/v\\//",
		"/(https?:\\/\\/)?www.youtube.com\\/embed\\//",
		"/(https?:\\/\\/)?www.youtube-nocookie.com\\/embed\\//",
		"/(https?:\\/\\/)?youtu.be\\/[a-zA-Z0-9_-]{11}/",
		"/(https?:\\/\\/)?youtu.be\\/.*\\?v=/",
		"/(https?:\\/\\/)?youtu.be\\/live\\//"
	],
	"noteNameFormat": "{{schema:name|safe_name}} - YouTube",
	"path": ""
}